<Window x:Class="energie.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:energie" mc:Ignorable="d" Title="Power Setter" Width="800" Height="300">
<Window.Resources>
  <Style TargetType="Button">
    <Setter Property="FontSize" Value="24"/>
    <Setter Property="FontWeight" Value="700"/>
    <Setter Property="Margin" Value="22"/>
    <Setter Property="Padding" Value="22"/>
    <Setter Property="Width" Value="200"/>
  </Style>
</Window.Resources>
  <StackPanel Margin="22">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="Save Energie" Click="SaveEnergie" ClickMode="Press" />
      <Button Content="Balanced" Click="BalancedMode" ClickMode="Press" />
      <Button Content="Power" Click="PowerMode" ClickMode="Press" />
    </StackPanel>
    <Label Name="Scheme" HorizontalContentAlignment="Center" FontWeight="600" />
  </StackPanel>
</Window>