<Window x:Class="energie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:energie"
        mc:Ignorable="d"
        Title="Power Setter" Width="600" Height="150">
    <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
      </Grid.RowDefinitions>
        <Button FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Content="Save Energie" Name="Save" Click="SaveEnergie"  ClickMode="Press" />
        <Button FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.Column="1" Content="Balanced" Name="Balanced" Click="BalancedMode"  ClickMode="Press" />
        <Button FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.Column="2" Content="Power" Name="Power" Click="PowerMode" ClickMode="Press" />
    </Grid>
</Window>
